<%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>
<%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>
<h1>Beepis</h1>
<div class="user-form">
  <% form_with model: @user do |form| %>
    <% form.first_name :name, required: true, autofocus: true, placeholder: "Name" %>
    <% form.last_name :name, required: true, autofocus: true, placeholder: "Name" %>
    <% form.email_field :email_address, required: true, placeholder: "Email Address" %>
    <% form.password_field :password, required: true, placeholder: "password" %>
    <%= form.submit "Sign up" %>
  <% end %>
</div>